<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movieku" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_blue</item>
        <item name="colorPrimaryVariant">@color/material_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="bg">@color/light_white</item>
        <item name="boldText">@color/black_bold_text</item>
        <item name="regularText">@color/black_regular_text</item>
        <item name="appbar">@color/light_white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="card">@color/white</item>
        <item name="appbarAttribute">@color/material_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_blue</item>
        <item name="colorSecondaryVariant">@color/material_blue</item>
        <item name="colorOnSecondary">@color/material_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Movieku.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Movieku.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Movieku.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Movieku.Fullscreen" parent="Theme.Movieku">
        <item name="android:actionBarStyle">@style/Widget.Theme.Movieku.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Movieku.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>