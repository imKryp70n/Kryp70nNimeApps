<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Activity.Watch.WatchAnimeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints,WebViewLayout">

        <WebView
            android:id="@+id/watchAnimeWeb"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:visibility="gone" />


        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            app:played_color="@color/material_blue"
            app:show_buffering="when_playing"
            app:controller_layout_id="@layout/custom_control"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/animeLinear"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <net.webilisim.webplayer.WEBPlayerStd
                android:id="@+id/watchAnimePlayer"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/watchAnimeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/material_blue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/watchAnimeEpisode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black_bold_text"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>