<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Account" app:key="KEY_Account">
        <Preference
            app:key="KEY_Login"
            app:title="Login" />


        <Preference
            app:key="KEY_Logout"
            app:title="Logout" />
    </PreferenceCategory>
    <PreferenceCategory
        app:key="KEY_Theme"
        app:title="Theme">

        <SwitchPreferenceCompat
            app:icon="@drawable/ic_baseline_nights_stay_24"
            app:key="KEY_NightMode"
            app:title="Night Mode" />

    </PreferenceCategory>

    <PreferenceCategory app:title="About Me" app:key="KEY_About">
        <Preference app:title="Profile" app:key="KEY_Profile"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="My Social Media">
        <Preference
            app:key="KEY_Github"
            app:title="Github" />
        <Preference
            app:key="KEY_Facebook"
            app:title="Facebook" />
        <Preference
            app:key="KEY_Email"
            app:title="Email" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Donate">
        <Preference
            app:key="COFFEE"
            app:title="Coffee" />
        <Preference
            app:key="Paypal"
            app:title="PayPal" />
    </PreferenceCategory>


</PreferenceScreen>